<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/light_stall_layout"
        android:orientation="horizontal">

        <RadioGroup
            android:visibility="gone"
            android:id="@+id/light_stall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/num1"
                style="@style/radio_man_stall_button"
                android:drawableTop="@drawable/radio_button_light_man_number1" />

            <RadioButton
                android:id="@+id/num2"
                style="@style/radio_man_stall_button"
                android:drawableTop="@drawable/radio_button_light_man_number2" />

            <RadioButton
                android:id="@+id/num3"
                style="@style/radio_man_stall_button"
                android:drawableTop="@drawable/radio_button_light_man_number3" />

            <RadioButton
                android:id="@+id/num4"
                style="@style/radio_man_stall_button"
                android:drawableTop="@drawable/radio_button_light_man_number4" />

            <RadioButton
                android:id="@+id/num5"
                style="@style/radio_man_stall_button"
                android:drawableTop="@drawable/radio_button_light_man_number5" />

            <RadioButton
                android:id="@+id/num6"
                style="@style/radio_man_stall_button"
                android:drawableTop="@drawable/radio_button_light_man_number6" />

            <RadioButton
                android:id="@+id/num7"
                style="@style/radio_man_stall_button"
                android:drawableTop="@drawable/radio_button_light_man_number7" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/light_stall_gone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/light_stall_gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/num1_gone"
                style="@style/radio_man_stall_button"
                android:drawableTop="@drawable/radio_button_light_man_number1_test" />

            <RadioButton
                android:id="@+id/num2_gone"
                style="@style/radio_man_stall_button"
                android:drawableTop="@drawable/radio_button_light_man_number2_test" />

            <RadioButton
                android:id="@+id/num3_gone"
                style="@style/radio_man_stall_button"
                android:drawableTop="@drawable/radio_button_light_man_number3_test" />

            <RadioButton
                android:id="@+id/num4_gone"
                style="@style/radio_man_stall_button"
                android:drawableTop="@drawable/radio_button_light_man_number4_test" />

            <RadioButton
                android:id="@+id/num5_gone"
                style="@style/radio_man_stall_button"
                android:drawableTop="@drawable/radio_button_light_man_number5_test" />

            <RadioButton
                android:id="@+id/num6_gone"
                style="@style/radio_man_stall_button"
                android:drawableTop="@drawable/radio_button_light_man_number6_test" />

            <RadioButton
                android:id="@+id/num7_gone"
                style="@style/radio_man_stall_button"
                android:drawableTop="@drawable/radio_button_light_man_number7_test" />
        </RadioGroup>
    </LinearLayout>

</FrameLayout>