<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/light_project_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:text="蜂寻科技研发中心"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/light_management"
            style="@style/text"
            android:scaleType="centerInside"
            android:background="@drawable/lm_lightmanage" />

        <TextView
            style="@style/text"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/enger_management"
            android:scaleType="centerInside"
            style="@style/text"
            android:background="@drawable/lm_enger" />

        <TextView
            style="@style/text"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/single_operation"
            style="@style/text"
            android:scaleType="centerInside"
            android:background="@drawable/lm_single" />

        <TextView
            style="@style/text"
            android:layout_weight="1" />


    </LinearLayout>

</LinearLayout>